{
  "name": "React Component Template",
  "description": "Template for generating React components with Tailwind CSS",
  "framework": "react",
  "design_spec": {
    "aesthetic": "minimalist",
    "typography": {
      "heading": "Space Grotesk",
      "body": "IBM Plex Sans",
      "mono": "JetBrains Mono"
    },
    "colors": {
      "primary": "#1B4332",
      "secondary": "#F59E0B",
      "background": "#FAFAFA",
      "surface": "#FFFFFF",
      "text": "#171717",
      "muted": "#737373"
    },
    "spacing": {
      "unit": "4px",
      "scale": ["0", "4px", "8px", "12px", "16px", "24px", "32px", "48px", "64px"]
    },
    "motion": {
      "duration_quick": "100ms",
      "duration_normal": "250ms",
      "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },
  "requirements": [
    "TypeScript with proper types",
    "Tailwind CSS for styling",
    "Accessible (WCAG AA)",
    "Mobile-first responsive",
    "No placeholder content"
  ]
}
